{
	"DetailedErrors": true,
	"Kestrel": {
		"Certificates": {
			"Default": {
				"KeyPath": "Certificates/https-certificate.key",
				"Path": "Certificates/https-certificate.crt"
			}
		},
		"EndpointDefaults": {
			"ClientCertificateMode": "RequireCertificate",
			// If you get some browser error like "ERR_SSL_CLIENT_AUTH_NO_COMMON_ALGORITHMS" you may specify SslProtocols. Don't know why. But something like below (remove DISABLED_):
			"DISABLED_SslProtocols": [
				"Tls12"
			]
		}
	},
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	}
}